<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/friend_profile">
    tools:context=".HomePageFragment"
    android:background="@color/brown">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <LinearLayout
            android:background="@drawable/gradientbackground"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/friendsProfilePicture"
                    android:background="@drawable/gradientbackground"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="130dp"
                    android:adjustViewBounds="true"
                    tools:src="@tools:sample/avatars[11]" />

            </RelativeLayout>


            <TextView
                android:id="@+id/friendsName"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sydney Davidson"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="31sp"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/friendsBio"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="center"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_marginTop="310dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/friendsFoodStreakTextView"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/streaksbackground"
                        android:text="12"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#455A64"/>
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="54dp"
                        android:layout_marginTop="47dp"
                        android:src="@mipmap/ic_launcher_foodicon" />

                    <TextView
                        android:id="@+id/friendsGymtreakTextView"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_marginLeft="190dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/streaksbackground"
                        android:text="19"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#455A64" />

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="216dp"
                        android:layout_marginTop="44dp"
                        android:src="@mipmap/ic_launcher_gymicon" />

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>


</FrameLayout>