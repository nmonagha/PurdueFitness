<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomePageFragment"
    android:background="@color/brown">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="191dp">

                <ImageButton
                    android:id="@+id/profilePictureHomePage"
                    android:layout_width="wrap_content"
                    android:layout_height="181dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="118dp"

                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="117dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/gradientbackground"
                    android:scaleType="fitXY"
                    tools:src="@tools:sample/avatars[11]" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="158dp"
                    android:layout_marginEnd="84dp"
                    android:layout_marginBottom="13dp"
                    android:src="@drawable/edit" />

            </RelativeLayout>


            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="Sydney Davidson"
                android:textAlignment="center"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="28sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/Bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="hello! I am a freshman and I love Corec"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/card"
                    android:background="@color/darkbrown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/foodStreakTextView"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/streaksbackground"
                        android:text="12"
                        android:textAlignment="center"
                        android:textColor="#455A64"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginStart="54dp"
                        android:layout_marginTop="47dp"
                        android:src="@mipmap/ic_launcher_foodicon" />

                    <TextView
                        android:id="@+id/gymtreakTextView"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_marginStart="190dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/badgesbackground"
                        android:text="19"
                        android:textAlignment="center"
                        android:textColor="#ffff"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="216dp"
                        android:layout_marginTop="44dp"
                        android:src="@mipmap/ic_launcher_gymicon" />

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/foodProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="224dp"
        android:layout_height="204dp"
        android:layout_alignStart="@+id/foodCurrentBadge"
        android:layout_alignEnd="@+id/foodNextBadge"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="7dp" />
    <TextView
        android:id="@+id/foodCurrentBadge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="304dp"
        android:layout_marginBottom="81dp"
        android:background="@drawable/streaksbackground"
        android:text="F1"
        android:textAlignment="center"
        android:textColor="#455A64"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/foodNextBadge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="305dp"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="81dp"
        android:background="@drawable/streaksbackground"
        android:text="F2"
        android:textAlignment="center"
        android:textColor="#455A64"
        android:textSize="26sp"
        android:textStyle="bold" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="224dp"
        android:layout_height="86dp"
        android:layout_alignStart="@+id/currentBadge"
        android:layout_alignEnd="@+id/nextBadge"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="445dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/currentBadge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="304dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/badgesbackground"
        android:text="P1"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nextBadge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="305dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/badgesbackground"
        android:text="P2"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="26sp"
        android:textStyle="bold" />




</FrameLayout>